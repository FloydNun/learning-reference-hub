            background: var(--content-bg);
            overflow-y: auto;
        }

        .content-header {
            margin-bottom:  30px;
            padding-bottom: 20px;
            border-bottom: 3px solid var(--primary);
        }

        .content-header h1 {
            color: var(--primary);
            font-size: 2.5em;
            margin-bottom:  10px;
        }

        .breadcrumb {
            font-size: 0.9em;
            color: #666;
        }

        .breadcrumb a {
            color: var(--primary);
            text-decoration: none;
        }

        /* MARKDOWN CONTENT STYLING */
        .markdown-body {
            max-width: 900px;
        }

        .markdown-body h1 {
            color: #2c3e50;
            border-bottom: 3px solid var(--primary);
            padding-bottom: 10px;
            margin:  30px 0 20px;
        }

        .markdown-body h2 {
            color: #34495e;
            margin:  25px 0 15px;
            padding-left: 10px;
            border-left:  4px solid var(--primary);
        }

        .markdown-body h3 {
            color: #555;
            margin: 20px 0 10px;
        }

        .markdown-body pre {
            background: #f8f9fa;
