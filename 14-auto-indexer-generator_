        /* PROGRESS INDICATOR */
        .progress {
            font-size: 0.9em;
            color: #666;
            margin-top: 10px;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

