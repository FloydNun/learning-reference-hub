        }

        .markdown-body tr:nth-child(even) {
            background: #f9f9f9;
        }

        .markdown-body blockquote {
            border-left: 4px solid var(--secondary);
            padding-left: 20px;
            margin: 20px 0;
            font-style: italic;
            color: #666;
        }

        .markdown-body img {
            max-width: 100%;
            border-radius: 8px;
            margin: 20px 0;
        }

