        }

        .theme-switcher button:hover {
            background:  rgba(255,255,255,0.2);
        }

        /* DARK THEME */
        body.dark-theme {
            --sidebar-bg: #1a1a1a;
            --content-bg: #2d2d2d;
            --text: #e0e0e0;
            --border: #444;
        }

        body.dark-theme .markdown-body pre {
            background: #1a1a1a;
        }

        body.dark-theme .markdown-body code {
            background: #1a1a1a;
            color: #61dafb;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h1>üìö Learning Hub</h1>
                <p>Your personal reference library</p>
            </div>

            <!-- SEARCH -->
            <div class="search-box">
                <input 
                    type="text" 
                    id="searchInput" 
                    placeholder="üîç Search topics..."
                    onkeyup="filterNav()"
                >
            </div>

            <!-- NAVIGATION (Auto-generated) -->
            <div id="navigation">
                <!-- Will be populated by JavaScript -->
            </div>

            <!-- THEME SWITCHER -->
            <div class="theme-switcher">
                <button onclick="toggleTheme()">üåì Toggle Dark Mode</button>
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <main class="content">
            <div class="content-header">
                <div class="breadcrumb" id="breadcrumb">
                    <a href="#" onclick="loadHome()">Home</a>
                </div>
                <h1 id="pageTitle">Welcome! </h1>
            </div>

            <div id="markdown-content" class="markdown-body">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading content...</p>
                </div>
            </div>

            <div class="progress" id="progress"></div>
        </main>
    </div>

    <script>
        // ==========================================
        // üéØ CONFIGURATION - CUSTOMIZE THIS!
        // ==========================================
        
        const CONFIG = {
            title: "My Learning Hub",
            subtitle: "Building knowledge, one page at a time",
            defaultFile: "README.md",
            
            // üìÅ ORGANIZE YOUR FILES BY CATEGORY
            categories: [
                {
                    name:  "Getting Started",
                    emoji: "üöÄ",
                    files: [
                        { name: "README.md", title: "Introduction", tags: ["overview"] },
                        { name: "quick-start.md", title: "Quick Start Guide", tags: ["beginner"] }
                    ]
                },
                {
                    name: "Core Concepts",
                    emoji: "üìñ",
                    files: [
                        { name: "01-basics.md", title: "Basics", tags: ["fundamental"] },
                        { name:  "02-advanced.md", title: "Advanced Topics", tags: ["advanced"] }
                    ]
                },
                {
                    name: "Reference",
                    emoji: "üìö",
                    files: [
                        { name: "cheatsheet.md", title: "Cheat Sheet", tags: ["reference"] },
                        { name:  "glossary.md", title: "Glossary", tags: ["reference"] }
                    ]
                }
            ]
        };

        // ==========================================
        // üîß CORE FUNCTIONS
        // ==========================================

        const contentDiv = document.getElementById('markdown-content');
        const pageTitleDiv = document.getElementById('pageTitle');
        const breadcrumbDiv = document.getElementById('breadcrumb');
        const progressDiv = document.getElementById('progress');

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            buildNavigation();
            loadFile(CONFIG.defaultFile);
            updateHeaderInfo();
        });

        // Build navigation from config
        function buildNavigation() {
            const nav = document. getElementById('navigation');
            nav.innerHTML = '';

            CONFIG.categories.forEach(category => {
                const section = document.createElement('div');
                section.className = 'nav-section';

                const title = document.createElement('div');
                title.className = 'nav-section-title';
                title.textContent = `${category.emoji} ${category.name}`;
                section.appendChild(title);

                const list = document.createElement('ul');
                list.className = 'nav-list';

                category.files.forEach(file => {
                    const li = document.createElement('li');
                    const a = document.createElement('a');
                    a.href = '#';
                    a.textContent = file.title;
                    a.dataset.file = file.name;
                    a.dataset.category = category. name;
                    
                    a.addEventListener('click', (e) => {
                        e.preventDefault();
                        loadFile(file.name, file.title, category.name);
                        setActiveLink(a);
                    });

                    li.appendChild(a);
                    list.appendChild(li);
                });

                section. appendChild(list);
                nav. appendChild(section);
            });
        }

        // Load and render markdown file
        async function loadFile(filename, title = '', category = '') {
            showLoading();

            try {
                const response = await fetch(filename);
                
                if (!response.ok) {
                    throw new Error(`File not found: ${filename}`);
                }

                const text = await response.text();
                const html = marked.parse(text);
                
                contentDiv.innerHTML = html;
                pageTitleDiv.textContent = title || filename;
                
                // Update breadcrumb
                breadcrumbDiv.innerHTML = `
                    <a href="#" onclick="loadHome()">Home</a>
                    ${category ? ` ‚Üí <span>${category}</span>` : ''}
                    ${title ? ` ‚Üí <strong>${title}</strong>` : ''}
                `;

                // Update progress
                updateProgress();
                
                window.scrollTo(0, 0);

            } catch (error) {
                showError(error.message, filename);
            }
        }

        // Loading state
        function showLoading() {
            contentDiv.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading content...</p>
                </div>
            `;
        }

        // Error state
        function showError(message, filename) {
            contentDiv. innerHTML = `
                <div class="error">
                    <h2>‚ö†Ô∏è Oops!</h2>
                    <p><strong>Could not load: </strong> ${filename}</p>
                    <p>${message}</p>
                    <p><small>Make sure the file exists in the same directory. </small></p>
                    <button onclick="loadHome()" style="margin-top: 10px; padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer;">
                        Go Home
                    </button>
                </div>
            `;
        }

        // Set active link
        function setActiveLink(activeElement) {
            document.querySelectorAll('. nav-list a').forEach(link => {
                link.classList. remove('active');
            });
            activeElement.classList.add('active');
        }

        // Search/filter navigation
        function filterNav() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const links = document.querySelectorAll('. nav-list a');

            links.forEach(link => {
                const text = link.textContent.toLowerCase();
                const listItem = link.parentElement;
                
                if (text.includes(searchTerm)) {
                    listItem.style.display = '';
                } else {
                    listItem.style.display = 'none';
                }
            });
        }

        // Load home/default file
        function loadHome() {
            loadFile(CONFIG.defaultFile);
            setActiveLink(document.querySelector(`[data-file="${CONFIG.defaultFile}"]`));
        }

        // Update header with config
        function updateHeaderInfo() {
            document.querySelector('. sidebar-header h1').innerHTML = CONFIG.title;
            document.querySelector('.sidebar-header p').textContent = CONFIG.subtitle;
            document.title = CONFIG.title;
        }

        // Progress tracker (files read)
        function updateProgress() {
            const totalFiles = CONFIG.categories.reduce((sum, cat) => sum + cat.files.length, 0);
            const readFiles = JSON.parse(localStorage.getItem('readFiles') || '[]');
            
            progressDiv.innerHTML = `
                üìä Progress: ${readFiles.length} / ${totalFiles} files read
            `;

            // Save current file as read
            const currentFile = document.querySelector('. nav-list a. active')?.dataset.file;
            if (currentFile && ! readFiles.includes(currentFile)) {
                readFiles.push(currentFile);
                localStorage.setItem('readFiles', JSON.stringify(readFiles));
            }
        }

        // Theme switcher
        function toggleTheme() {
            document.body.classList.toggle('dark-theme');
            const isDark = document.body.classList. contains('dark-theme');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        }

        // Load saved theme
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-theme');
        }
    </script>
</body>
</html>
```

## Template 2: React Auto-Indexer

```jsx name=auto-indexer-react.jsx
import React, { useState, useEffect } from 'react';
import ReactMarkdown from 'react-markdown';
import './AutoIndexer.css';

// ==========================================
// üéØ CONFIGURATION - CUSTOMIZE THIS! 
// ==========================================

const CONFIG = {
  title: "My Learning Hub",
  subtitle: "Building knowledge, one page at a time",
  defaultFile: "README.md",
  
  categories: [
    {
      name: "Getting Started",
      emoji: "üöÄ",
      files: [
        { name:  "README.md", title: "Introduction", tags: ["overview"] },
        { name: "setup.md", title: "Setup Guide", tags: ["beginner"] }
      ]
    },
    {
      name: "Tutorials",
      emoji: "üìñ",
      files: [
        { name: "tutorial-01.md", title: "Tutorial 1", tags: ["tutorial"] },
        { name: "tutorial-02.md", title: "Tutorial 2", tags: ["tutorial"] }
      ]
    }
  ]
};

// ==========================================
// üé® MAIN COMPONENT
// ==========================================

function AutoIndexer() {
  const [currentFile, setCurrentFile] = useState(CONFIG.defaultFile);
  const [content, setContent] = useState('');
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [searchTerm, setSearchTerm] = useState('');
  const [darkMode, setDarkMode] = useState(false);

  useEffect(() => {
    loadFile(currentFile);
  }, [currentFile]);

  const loadFile = async (filename) => {
    setLoading(true);
    setError(null);

    try {
      const response = await fetch(filename);
      if (!response.ok) throw new Error('File not found');
      
      const text = await response.text();
      setContent(text);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  const filteredCategories = CONFIG.categories.map(category => ({
    ...category,
    files: category.files.filter(file =>
      file.title.toLowerCase().includes(searchTerm.toLowerCase())
    )
  })).filter(category => category.files. length > 0);

  return (
    <div className={`auto-indexer ${darkMode ?  'dark' : ''}`}>
      {/* SIDEBAR */}
      <aside className="sidebar">
        <div className="sidebar-header">
          <h1>{CONFIG.title}</h1>
          <p>{CONFIG.subtitle}</p>
        </div>

        <input
          type="text"
          className="search-box"
          placeholder="üîç Search..."
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target. value)}
        />

        <nav className="navigation">
          {filteredCategories.map(category => (
            <div key={category.name} className="nav-section">
              <div className="nav-section-title">
                {category.emoji} {category. name}
              </div>
              <ul>
                {category.files.map(file => (
                  <li key={file.name}>
                    <a
                      href="#"
                      className={currentFile === file.name ? 'active' : ''}
                      onClick={(e) => {
                        e.preventDefault();
                        setCurrentFile(file.name);
                      }}
                    >
                      {file.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </nav>

        <button 
          className="theme-toggle"
          onClick={() => setDarkMode(!darkMode)}
        >
          {darkMode ? '‚òÄÔ∏è' : 'üåô'} Toggle Theme
        </button>
      </aside>

      {/* MAIN CONTENT */}
      <main className="content">
        {loading && <div className="loading">Loading...</div>}
        
        {error && (
          <div className="error">
            <h2>‚ö†Ô∏è Error</h2>
            <p>{error}</p>
          </div>
        )}

        {!loading && !error && (
          <div className="markdown-content">
            <ReactMarkdown>{content}</ReactMarkdown>
          </div>
        )}
      </main>
    </div>
  );
}

export default AutoIndexer;
```

## Template 3: Python Flask Auto-Indexer

```python name=auto_indexer. py
from flask import Flask, render_template, send_from_directory, jsonify
import os
import json
from markdown import markdown

app = Flask(__name__)

# ==========================================
# üéØ CONFIGURATION - CUSTOMIZE THIS!
# ==========================================

CONFIG = {
    "title": "My Learning Hub",
    "subtitle": "Building knowledge, one page at a time",
    "default_file": "README.md",
    "markdown_dir": "content",  # Directory containing markdown files
    
    "categories": [
        {
            "name": "Getting Started",
            "emoji": "üöÄ",
            "files":  [
                {"name": "README.md", "title": "Introduction"},
                {"name": "setup. md", "title": "Setup Guide"}
            ]
        },
        {
            "name": "Tutorials",
            "emoji":  "üìñ",
            "files": [
                {"name": "tutorial-01.md", "title": "Tutorial 1"},
                {"name": "tutorial-02.md", "title": "Tutorial 2"}
            ]
        }
    ]
}

@app.route('/')
def index():
    """Render the main page"""
    return render_template('index.html', config=CONFIG)

@app.route('/api/content/<filename>')
def get_content(filename):
    """Get markdown file content"""
    try:
        filepath = os.path.join(CONFIG['markdown_dir'], filename)
        with open(filepath, 'r', encoding='utf-8') as f:
            content = f.read()
            html = markdown(content, extensions=['fenced_code', 'tables'])
            return jsonify({'content': html, 'error': None})
    except FileNotFoundError:
        return jsonify({'content': None, 'error': 'File not found'}), 404

@app.route('/api/search/<query>')
def search(query):
    """Search through files"""
    results = []
    query = query.lower()
    
    for category in CONFIG['categories']: 
        for file in category['files']:
            if query in file['title'].lower():
                results.append({
                    'category': category['name'],
                    'file': file
                })
    
    return jsonify(results)

if __name__ == '__main__': 
    app.run(debug=True)
```

```html name=templates/index.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ config.title }}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <h1>{{ config.title }}</h1>
            <p>{{ config.subtitle }}</p>
            
            <input type="text" id="search" placeholder="üîç Search...">
            
            <nav id="navigation">
                {% for category in config.categories %}
                <div class="nav-section">
                    <div class="nav-title">{{ category.emoji }} {{ category.name }}</div>
                    <ul>
                        {% for file in category.files %}
                        <li>
                            <a href="#" data-file="{{ file.name }}">
                                {{ file.title }}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            </nav>
        </aside>

        <main class="content">
            <div id="markdown-content">
                <div class="loading">Loading...</div>
            </div>
        </main>
    </div>

    <script>
        // Load file content
        async function loadFile(filename) {
            const content = document.getElementById('markdown-content');
            content.innerHTML = '<div class="loading">Loading...</div>';

            try {
                const response = await fetch(`/api/content/${filename}`);
                const data = await response.json();

                if (data.error) {
                    content.innerHTML = `<div class="error">${data.error}</div>`;
                } else {
                    content.innerHTML = data.content;
                }
            } catch (error) {
                content.innerHTML = `<div class="error">Error loading file</div>`;
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadFile('{{ config.default_file }}');

            // Add click handlers
            document.querySelectorAll('[data-file]').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    loadFile(e.target.dataset.file);
                });
            });
        });
    </script>
</body>
</html>
```

## üéØ How to Use These Templates

### For HTML Version (Easiest! ):
```bash
1. Copy auto-indexer-markdown.html
2. Edit the CONFIG section: 
   - Change title/subtitle
   - Add your categories
   - List your . md files
3. Put all . md files in same folder
4. Open HTML in browser
5. Done!  üéâ
```

### For React Version:
```bash
npm install react-markdown
# Copy the component
# Edit CONFIG section
# Use in your app
```

### For Flask Version:
```bash
pip install flask markdown
# Create folder structure: 
# - app.py (auto_indexer.py)
# - templates/index.html
# - content/ (your . md files)
# Edit CONFIG
# Run:  python app.py
```

## üé® Quick Customization Guide

```javascript
// Change colors
: root {
    --primary:  #your-color;      // Main accent color
    --secondary: #your-color;    // Secondary color
    --sidebar-bg: #your-color;   // Sidebar background
}

// Change layout
. sidebar { width: 350px; }       // Wider sidebar
.content { padding: 60px; }      // More padding

// Add custom categories
{
    name: "My Category",
    emoji: "üéØ",                  // Any emoji! 
    files: [
        { 
            name: "file. md", 
            title: "Display Name",
            tags: ["tag1", "tag2"]  // For filtering
        }
    ]
}
```

## üí° Real-World Examples

### Example 1: Tutorial Site
```javascript
categories: [
    {
        name: "Beginner",
        emoji: "üå±",
        files: [
            { name: "lesson-01.md", title: "Your First Steps" },
            { name: "lesson-02.md", title: "Basic Concepts" }
        ]
    },
    {
        name:  "Intermediate",
        emoji:  "üåø",
        files: [
            { name: "lesson-10.md", title: "Advanced Patterns" }
        ]
    }
]
```

### Example 2: API Documentation
```javascript
categories: [
    {
        name: "Authentication",
        emoji: "üîê",
        files: [
            { name: "auth-basics.md", title: "Getting Started" },
            { name:  "oauth. md", title: "OAuth 2.0" }
        ]
    },
    {
        name: "Endpoints",
        emoji: "üîå",
        files: [
            { name: "users-api.md", title: "Users API" },
            { name: "posts-api.md", title: "Posts API" }
        ]
    }
]
```

### Example 3: Personal Notes
```javascript
categories: [
    {
        name: "Today I Learned",
        emoji: "üí°",
        files: [
            { name: "2026-01-08.md", title: "January 8, 2026" }
        ]
    },
    {
        name: "Projects",
        emoji: "üöÄ",
        files: [
            { name: "project-ideas.md", title: "Ideas" },
            { name: "project-notes.md", title: "Notes" }
        ]
    }
]
```

