<body>
    <div class="header">
        <h1>ðŸŽ¨ HTML SHOWCASE</h1>
        <p>Your collection of standalone apps, experiments, and creations</p>
    </div>
    
    <div class="controls">
        <div class="search-box">
            <input type="text" id="searchInput" placeholder="ðŸ” Search projects..." onkeyup="filterGallery()">
        </div>
        <div class="filter-buttons">
            <button class="filter-btn active" onclick="filterByType('all')">All</button>
            <button class="filter-btn" onclick="filterByType('standalone')">Standalone</button>
            <button class="filter-btn" onclick="filterByType('react')">React</button>
            <button class="filter-btn" onclick="filterByType('vue')">Vue</button>
            <button class="filter-btn" onclick="filterByType('firebase')">Firebase</button>
        </div>
    </div>
    
    <div class="gallery-container">
        <div class="gallery-scroll" id="gallery">
            <!-- Gallery items will be populated by JavaScript -->
        </div>
        
        <div class="scroll-buttons">
            <button class="scroll-btn" onclick="scrollGallery('left')">â—„</button>
            <button class="scroll-btn" onclick="scrollGallery('right')">â–º</button>
        </div>
    </div>
    
    <!-- Full Preview Modal -->
    <div class="modal" id="previewModal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal()">âœ•</button>
            <iframe class="modal-iframe" id="modalFrame"></iframe>
        </div>
    </div>
    
    <script>
        // Sample data (will be loaded from . metadata/*. json files)
        let showcaseItems = [
            {
                filename: 'react-todo-app.html',
                title: 'React Todo App',
                description: 'A simple todo app built with React',
                type: 'react',
                framework: 'React',
                features: ['React', 'LocalStorage'],
                created: '2026-01-19'
            },
            {
                filename: 'firebase-chat.html',
                title: 'Firebase Chat',
                description:  'Real-time chat application using Firebase',
                type:  'standalone',
                framework: null,
                features: ['Firebase', 'Real-time'],
                created: '2026-01-18'
            },
            {
                filename: 'd3-visualization.html',
                title: 'D3 Data Viz',
                description: 'Interactive data visualization with D3.js',
                type: 'standalone',
                framework: null,
                features: ['D3.js', 'SVG'],
                created: '2026-01-17'
            }
        ];
        
        let currentFilter = 'all';
        
        function renderGallery() {
            const gallery = document.getElementById('gallery');
            
            if (showcaseItems.length === 0) {
                gallery.innerHTML = `
                    <div class="empty-state">
                        <h2>ðŸŽ¨ No projects yet</h2>
                        <p>Drop HTML files into INBOX to add them to your showcase!</p>
                    </div>
                `;
                return;
            }
            
            gallery.innerHTML = '';
            
            showcaseItems. forEach(item => {
                const itemEl = document.createElement('div');
                itemEl.className = 'gallery-item';
                itemEl.dataset.type = item.type;
                itemEl.dataset.title = item.title. toLowerCase();
                
                const tags = item.features. map(feature => {
                    const tagClass = feature.toLowerCase().replace('.', '');
                    return `<span class="tag ${tagClass}">${feature}</span>`;
                }).join('');
                
                itemEl.innerHTML = `
                    <div class="preview-frame">
                        <iframe src="${item.filename}" sandbox="allow-scripts"></iframe>
                        <div class="preview-overlay">
                            <span>Click to Open</span>
                        </div>
                    </div>
                    <div class="item-info">
                        <div class="item-title">${item.title}</div>
                        <div class="item-description">${item.description || 'No description'}</div>
                        <div class="item-tags">
                            ${tags}
                        </div>
                    </div>
                `;
                
                itemEl.onclick = () => openModal(item. filename);
                gallery.appendChild(itemEl);
            });
        }
        
        function filterByType(type) {
            currentFilter = type;
            
            // Update button states
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // Filter items
            const items = document.querySelectorAll('.gallery-item');
            items.forEach(item => {
                if (type === 'all') {
                    item.style. display = 'block';
                } else {
                    const itemType = item.dataset.type;
                    const hasFeature = item.querySelector(`.tag.${type}`);
                    item.style.display = (itemType === type || hasFeature) ? 'block' : 'none';
                }
            });
        }
        
        function filterGallery() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const items = document.querySelectorAll('.gallery-item');
            
            items.forEach(item => {
                const title = item.dataset.title;
                const matches = title.includes(searchTerm);
                
                if (currentFilter === 'all') {
                    item.style. display = matches ?  'block' : 'none';
                } else {
                    const typeMatches = item.dataset.type === currentFilter || 
                                       item.querySelector(`.tag.${currentFilter}`);
                    item.style.display = (matches && typeMatches) ? 'block' : 'none';
                }
            });
        }
        
        function scrollGallery(direction) {
            const gallery = document.getElementById('gallery');
            const scrollAmount = 350;
            
            if (direction === 'left') {
                gallery.scrollBy({ left: -scrollAmount, behavior:  'smooth' });
            } else {
                gallery.scrollBy({ left: scrollAmount, behavior:  'smooth' });
            }
        }
        
        function openModal(filename) {
            const modal = document.getElementById('previewModal');
            const iframe = document.getElementById('modalFrame');
            
            iframe.src = filename;
            modal.classList.add('active');
        }
        
        function closeModal() {
            const modal = document.getElementById('previewModal');
            const iframe = document.getElementById('modalFrame');
            
            modal.classList.remove('active');
            iframe.src = '';
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
            
            const gallery = document.getElementById('gallery');
            if (e.key === 'ArrowLeft') {
                scrollGallery('left');
            } else if (e.key === 'ArrowRight') {
                scrollGallery('right');
            }
        });
        
        // Initialize
        renderGallery();
        
        // TODO: Load actual data from .metadata/*.json files via fetch
        // fetch('. metadata/')
        //   .then(response => response.json())
        //   .then(data => {
        //     showcaseItems = data;
        //     renderGallery();
        //   });
    </script>
</body>
